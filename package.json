{
  "name": "world-cup-of-tocs-api",
  "version": "0.2.0",
  "description": "A simple express API for the World Cup of Train Operators, run by Geoff Marshall",
  "main": "index.js",
  "repository": "https://github.com/davwheat/world-cup-of-tocs-api.git",
  "engines": {
    "node": ">=12.x"
  },
  "contributors": [
    {
      "name": "David Wheatley",
      "email": "hi@davwheat.dev",
      "url": "https://davwheat.dev"
    }
  ],
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "watch": "pm2 start ecosystem.config.js -- --color",
    "restart": "yarn stop && yarn watch",
    "format": "prettier --write \"**/*.{js,json}\"",
    "stop": "pm2 stop ecosystem.config.js",
    "status": "pm2 status",
    "monitor": "pm2 monit",
    "logs": "pm2 logs \"WCOTOCs API\""
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fuse.js": "^6.4.6",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "pm2": "^4.5.1",
    "prettier": "^2.2.1"
  }
}
