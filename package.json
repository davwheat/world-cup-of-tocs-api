{
  "name": "world-cup-of-tube-lines-api",
  "version": "0.2.0",
  "description": "A simple express API for the World Cup of Tube Lines, run by Geoff Marshall",
  "main": "index.js",
  "repository": "https://github.com/davwheat/world-cup-of-tube-lines-api.git",
  "engines": {
    "node": ">=12.x"
  },
  "contributors": [
    {
      "name": "David Wheatley",
      "email": "hi@davwheat.dev",
      "url": "https://davwheat.dev"
    }
  ],
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "cup.json",
      ".git/**",
      "**/*.log",
      "data/**",
      "**/node_modules/**"
    ]
  },
  "scripts": {
    "start": "ts-node --transpile-only index.ts",
    "watch": "nodemon --transpile-only index.ts",
    "restart": "yarn stop && yarn watch",
    "format": "prettier --write \"**/*.{js,json}\"",
    "stop": "pm2 stop ecosystem.config.js",
    "status": "pm2 status",
    "monitor": "pm2 monit",
    "logs": "pm2 logs \"WCOTOCs API v2\""
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "fuse.js": "^6.5.3",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.5",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1"
  },
  "packageManager": "yarn@3.1.1"
}
